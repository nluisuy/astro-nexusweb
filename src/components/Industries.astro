---
const industries = [
    { name: "Finance", icon: "account_balance" },
    { name: "Industrial", icon: "precision_manufacturing" },
    { name: "Retail", icon: "shopping_cart" },
    { name: "Technology", icon: "hub" },
    { name: "Healthcare", icon: "health_and_safety" },
];
---

<section class="py-32 bg-white" id="industries">
    <div class="max-w-7xl mx-auto px-6 lg:px-12 text-center">
        <h2 class="text-sm font-bold tracking-[0.3em] uppercase text-slate-400 mb-16">
            Industries Served
        </h2>
        <div class="flex flex-wrap justify-center items-center gap-x-12 sm:gap-x-16 gap-y-12">
            {
                industries.map((ind) => (
                    <div class="flex flex-col items-center group cursor-default">
                        <span class="material-symbols-outlined text-4xl text-slate-300 mb-3 group-hover:text-slate-600 transition-colors">
                            {ind.icon}
                        </span>
                        <span class="text-sm font-semibold text-slate-800 tracking-wide group-hover:text-slate-950 transition-colors">
                            {ind.name}
                        </span>
                    </div>
                ))
            }
        </div>
    </div>
</section>
