<section class="py-32 bg-nexus-gray-soft" id="contact">
    <div class="max-w-7xl mx-auto px-6 lg:px-12">
        <div
            class="relative bg-white rounded-[3rem] p-12 md:p-24 overflow-hidden border border-gray-100 shadow-sm text-center"
        >
            <!-- Decorative background -->
            <div class="absolute top-0 right-0 w-80 h-80 bg-nexus-blue/5 blur-[100px] rounded-full">
            </div>
            <div
                class="absolute bottom-0 left-0 w-80 h-80 bg-nexus-purple/5 blur-[100px] rounded-full"
            >
            </div>

            <div class="relative z-10">
                <h2 class="text-4xl md:text-6xl font-display font-bold text-slate-900 mb-8">
                    Ready to Create?
                </h2>
                <p
                    class="max-w-2xl mx-auto text-lg text-slate-500 font-light leading-relaxed mb-16"
                >
                    Secure your position at the forefront of digital change. Connect with our senior
                    architectural consultants to map your high-impact roadmap.
                </p>

                <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
                    <button
                        id="openContactBtn"
                        class="w-full sm:w-auto px-12 py-6 bg-slate-900 text-white rounded-full font-bold text-sm uppercase tracking-[0.2em] hover:bg-slate-800 transition-all shadow-xl shadow-slate-200 hover:-translate-y-1"
                    >
                        Book Free Assessment
                    </button>
                    <button
                        id="openContactBtn2"
                        class="w-full sm:w-auto px-12 py-6 bg-white border border-slate-200 text-slate-900 rounded-full font-bold text-sm uppercase tracking-[0.2em] hover:border-slate-400 transition-all"
                    >
                        Book Strategy Session
                    </button>
                </div>

                <div
                    class="mt-16 flex flex-wrap justify-center gap-8 text-[0.7rem] font-bold uppercase tracking-widest text-slate-400"
                >
                    <span class="flex items-center gap-2"
                        ><span class="material-symbols-outlined text-sm">verified</span> No Commitment</span
                    >
                    <span class="flex items-center gap-2"
                        ><span class="material-symbols-outlined text-sm">schedule</span> 45-Min Audit</span
                    >
                    <span class="flex items-center gap-2"
                        ><span class="material-symbols-outlined text-sm">rocket_launch</span> Expert Guidance</span
                    >
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Initialize event listeners
    document.addEventListener("DOMContentLoaded", () => {
        const btn1 = document.getElementById("openContactBtn");
        const btn2 = document.getElementById("openContactBtn2");

        if (btn1) {
            btn1.addEventListener("click", () => {
                window.dispatchEvent(new CustomEvent("openContactModal"));
            });
        }

        if (btn2) {
            btn2.addEventListener("click", () => {
                window.dispatchEvent(new CustomEvent("openContactModal"));
            });
        }
    });
</script>
